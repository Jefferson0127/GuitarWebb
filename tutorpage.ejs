  <script>
    function saveAttendance() {
      var attendanceCheckboxes = document.querySelectorAll('input[name="attendance"]');
      var attendanceData = [];
      
      attendanceCheckboxes.forEach(function(checkbox) {
        attendanceData.push({
          studentName: checkbox.parentNode.previousElementSibling.textContent,
          attendance: checkbox.checked
        });
      });
      
     
      console.log(attendanceData);
    }
	
	
	
  </script>
  
